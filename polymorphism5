        "def has_name(cls):\n",
        "    cls.name = \"Animal\"\n",
        "    return cls\n",
        "\n",
        "@has_name\n",
        "class Dog:\n",
        "    def bark(self):\n",
        "        print(\"Woof!\")\n",
        "\n",
        "@has_**name**\n",
        "class Cat:\n",
        "    def meow(self):\n",
        "        print(\"Meow!\")\n",
        "\n",
        "dog = Dog()\n",
        "cat = Cat()\n",
        "\n",
        "print(dog.name)\n",
